---
import Layout from '@/layouts/Layout.astro'

import AboutMe from '@/components/AboutMe.astro'
import Badge from '@/components/Badge.astro'
import Briefcase from '@/components/icons/Briefcase.astro'
import CodeIcon from '@/components/icons/Code.astro'
import Experience from '@/components/Experience.astro'
import GitHubIcon from '@/components/icons/GitHub.astro'
import LinkedInIcon from '@/components/icons/LinkedIn.astro'
import MailIcon from '@/components/icons/Mail.astro'
import ProfileIcon from '@/components/icons/Profile.astro'
import Projects from '@/components/Projects.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import SocialPill from '@/components/SocialPill.astro'
---

<Layout
  title='Portfolio de Iván López - Full Stack Web Developer'
  description='El portfolio de Iván López contiene información sobre la experiencia y proyectos tanto personales como profesionales del mismo. Si deseas contactar conmigo, puedes visitar mi perfil de LinkedIn o enviarme un correo'
>
  <main class='px-4'>
    <SectionContainer class='py-44 pb-24'>
      <img
        class='rounded-full size-12 mb-4'
        src='https://avatars.githubusercontent.com/u/6099886?s=400&u=bbd29a6dd4996c00f83d9abcddfd46fea3d872c3&v=4'
        alt='ivan lopez profile picture'
      />

      <h1
        class='text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'
      >
        Iván López<a
          href='https://www.linkedin.com/in/ivan-lopez-dev/'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center'
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>

      <h2 class='text-xl lg:text-2xl text-wrap max-w-[700px]'>
        +2 años de experiencia.
        <span class='text-yellow-200/90'>Desarrollador Web Full Stack</span>. <br
        />De
        <span class='text-emerald-500'>Barcelona, España</span>.
      </h2>

      <nav class='flex gap-4 mt-8 flex-wrap'>
        <SocialPill href='https://www.linkedin.com/in/ivan-lopez-dev/'>
          <LinkedInIcon class='size-4 md:size-6' />
          LinkedIn
        </SocialPill>
        <SocialPill href='https://github.com/Ivanlopez-dev'>
          <GitHubIcon class='size-4 md:size-6' />
          GitHub
        </SocialPill>
        <SocialPill href='mailto:ivaan100@gmail.com'>
          <MailIcon class='size-4 md:size-6' />
          ivaan100@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id='experiencia'>
      <h2 class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'>
        <Briefcase class='size-7' />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id='proyectos'>
      <h2 class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'>
        <CodeIcon class='size-7' />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id='sobre-mi'>
      <h2 class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'>
        <ProfileIcon class='size-7' />
        Sobre mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
